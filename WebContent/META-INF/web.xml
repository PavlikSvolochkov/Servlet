<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>c:\TEMP_DATA\</param-value>
    </context-param>
    <servlet>
        <servlet-name>AddClientServlet</servlet-name>
        <servlet-class>ServletModifyClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDataXML</servlet-name>
        <servlet-class>ServletDataXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateXMLServlet</servlet-name>
        <servlet-class>temp.CreateXMLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTest</servlet-name>
        <servlet-class>temp.ServletTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFormTest</servlet-name>
        <servlet-class>temp.ServletFormTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDataXML</servlet-name>
        <url-pattern>/ServletDataXML</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletXMLData</servlet-name>
        <servlet-class>ServletXMLData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletXMLData</servlet-name>
        <url-pattern>/ServletXMLData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddClientServlet</servlet-name>
        <url-pattern>/AddClientServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletModifyClient</servlet-name>
        <servlet-class>ServletModifyClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletModifyClient</servlet-name>
        <url-pattern>/ServletModifyClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateXMLServlet</servlet-name>
        <url-pattern>/CreateXMLServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTest</servlet-name>
        <url-pattern>/ServletTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFormTest</servlet-name>
        <url-pattern>/ServletFormTest</url-pattern>
    </servlet-mapping>
</web-app>
